{
    "system": "file:./system",
    "data": {
        "__allow": ["_subDirs", "data.schema", "*.json", "*.properties"],
        "__writable": true
    },
    "displays": {
        "__allow": ["_subDirs", "background.png", "*.display"],
        "__writable": true,
        "background.png": {
            "?": "/system/media/images/background.png"
        }
    },
    "media": {
        "__allow": ["_subDirs", "font", "*.png", "*.jpg", "*.gif", "*.dml", "*.html"],
        "__merge": "/system/media/customFonts",
        "__writable": true,
        "font": {
            "__allow": ["_subDirs", "fonts.css", "*.ttf", "*.otf"],
            "__writable": true,
            "fonts.css": {
                "generate": "module:customFonts",
                "when": ["."]
            }
        }
    },
    "user": {
        "__allow": ["*.user"],
        "__writable": true
    }
}
